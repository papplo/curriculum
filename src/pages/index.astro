---
// Component Imports
import MainHead from '../components/MainHead.astro';
import Button from '../components/Button/index.jsx';
import Nav from '../components/Nav/index.jsx';
import Footer from '../components/Footer/index.jsx';
import AssignmentListing from '../components/Listing/index.jsx';

const latestAssignments = Astro.fetchContent('./assignments/**/*.md')
  .sort((a,b) => new Date(b.period_end) - new Date(a.period_end))
  .filter((item, index) => index < 3 && item);

---
<html lang="en">
  <head>
    <MainHead title="Pablo Anttila - Frontend-utvecklare specialiserad på JavaScript för webb och mobil" />
    <style lang="scss">
      @use '../../public/styles/var' as *;

      $w-s: #{$min-mobile};

      .hero {
        position: relative;
        overflow: hidden;
        height: 35vh;

        @media (min-width: $w-s) {
          height: 45vw;
        }
      }

      .img {
        display: block;
        width: 100%;
        height: auto;
      }

      .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: auto;
        height: 100%;
        z-index: 10;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        justify-content: center;
        padding: 2rem 2rem 2rem 3rem;

        @media (min-width: $w-s) {
          padding: 0 6rem 0 8rem;
        }
      }

      .hero_title {
        text-indent: -.5em;
        font-weight: 900;
        font-size: $f-u6;
        margin-bottom: 0.5rem;
        margin-top: 0;
        line-height: $f-d2;

        @media (min-width: $w-s) {
          font-size: $f-u8;
          text-indent: -1.5em;
          line-height: $f-d1;

        }

        .subtitle {
          display: inline;
          font-weight: 400;
          font-size: $f-d6;
          font-style: normal;
          color: $c-gray;
          line-height: 95%;
        }
        
      }

      

      .grid {
        display: grid;
        grid-gap: 2rem;

      }

      .role {
        position: relative;
        display: inline-block;
        font-weight: 900;
        color: $t-bg;
        background-color: $t-fg;
        padding: 0.25em 0.5em;
        z-index: 2;

        @media (min-width: $w-s) {
          font-size: $f-u3;
        }

        + .role {
          margin-left: 1em;
        }

        &:nth-of-type(1) {
          .invert {
            background-color: $c-pink;
          }
        }

        &:nth-of-type(2) {
          .invert {
            background-color: $c-blue;
          }
        }

        &:nth-of-type(3) {
          .invert {
            background-color: $c-green;
          }
        }

        &:hover {
          .invert {
            clip-path: polygon(0% 0%, 100% 0%, 100% 100%, 0% 100%);
          }
        }
      }

      .invert {
        position: absolute;
        color: $t-fg;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        pointer-events: none;
        clip-path: polygon(0% 100%, 100% 100%, 100% 200%, 0% 200%);
        transition: clip-path cubic-bezier(0.4, 0, 0.5, 1) 150ms;
      }

      .desc {
        font-size: $f-u2;
        margin-top: 1.5rem;
        margin-bottom: 0;
      }

      .wrapper {
        max-width: 25em;
        margin: 2rem auto;

        @media (min-width: $w-s) {
          max-width: 50rem;
        }
      }

      .bio {
        line-height: 2;
        margin-bottom: 2rem;

        > span:first-of-type {
          line-height: 1;
          margin-bottom: 0.5em;
          display: block;
          font-weight: 700;
          font-size: $f-u4;
        }
      }
    </style>
  </head>
  <body>
    <Nav />
    <header class="hero">
      <div class="">
        <div class="overlay">
          <h1 class="hero_title title">
            Pablo Anttila <span class="subtitle">— Frontend-utvecklare specialiserad på JavaScript för webb och mobil. 
            Utformar Ui/Ux, har ett öga för detaljer och bakgrund inom visuell kommunikation.</span>
          </h1>
        </div>
      </div>
    </header>

    <main class="wrapper mt4 mb4">
        <div class="section">
          <h3 class="section_title title">Senaste kunduppdragen</h3>
          <div class="grid">
            {latestAssignments.map((assignment) => (
              <AssignmentListing assignment={assignment} />
            ))}
          </div>
          <div class="tac mt4">
            <a href="/assignments" class="link mr4">
              Se flera kunduppdrag
            </a>
              <Button>Ladda ned mitt cv <span class="ml1 mt0 mb0 f-u1">↓</span> </Button>
          </div>
      </div>

    </main>
    <Footer />
  </body>
</html>
